#!/usr/bin/env bash
# placeholder for nginx config
# Install nginx on your web-01
sudo apt update -y
sudo apt install nginx -y

mkdir -p /var/www/html/
sudo chmod -R 755 /var/www
echo 'Hello World!' >/var/www/html/index.html

sed -i s/"location \/ {"/"location \/redirect_me {\n \t \t \t return 301 https:\/\/github.com\/fashemma007;"/g /etc/nginx/sites-available/default

# Allow UFW firewall to receive xternal requests
sudo ufw allow 'Nginx HTTP'

# You canâ€™t use systemctl for restarting nginx
sudo service nginx restart
